# Ghana Legal Intelligence System (GLIS) Configuration

# ==============================================================================
# API Configuration
# ==============================================================================
API_HOST=localhost
API_PORT=8000
API_DEBUG=true

# ==============================================================================
# Database Configuration
# ==============================================================================
DATABASE_URL=sqlite:///./data/glis.db
DATABASE_ECHO=false

# ==============================================================================
# LLM Configuration (Layer 3)
# ==============================================================================

# OpenAI API Key (for GPT-4, GPT-3.5-turbo)
OPENAI_API_KEY=sk-your-api-key-here

# Alternative: Anthropic Claude API Key
# ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Alternative: HuggingFace API Token (for open-source models)
# HUGGINGFACE_API_TOKEN=hf_your-token-here

# LLM Model Selection
# Options: gpt-4, gpt-3.5-turbo, claude-3-opus, llama2-70b, mixtral-8x7b
PRIMARY_LLM_MODEL=gpt-4
FALLBACK_LLM_MODELS=gpt-3.5-turbo,claude-3-opus

# LLM Settings
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000
LLM_TIMEOUT_SECONDS=30
LLM_ENABLE_CACHING=true
LLM_CACHE_TTL_HOURS=24
LLM_COST_TRACKING=true

# ==============================================================================
# Case Data Configuration
# ==============================================================================
# Minimum cases to scrape
TARGET_CASES=100

# Minimum data quality score (0-1)
MIN_AVERAGE_QUALITY=0.7

# ==============================================================================
# Search and Analytics Configuration
# ==============================================================================
ENABLE_SEMANTIC_SEARCH=true
ENABLE_CITATION_ANALYSIS=true
ENABLE_PRECEDENT_ANALYSIS=true

# Maximum search results
MAX_SEARCH_RESULTS=50

# ==============================================================================
# Court Scraper Configuration
# ==============================================================================
COURT_TIMEOUT_SECONDS=30
COURT_RETRY_ATTEMPTS=3
COURT_RETRY_BACKOFF_FACTOR=2.0

# ==============================================================================
# Storage Configuration
# ==============================================================================
DATA_DIR=./data
CACHE_DIR=./data/cache
EMBEDDINGS_DIR=./data/embeddings
STATUTES_DIR=./data/statutes
LLM_CACHE_DIR=./data/llm_cache

# ==============================================================================
# Feature Flags
# ==============================================================================
ENABLE_CASE_BRIEF_GENERATION=true
ENABLE_PLEADINGS_ASSISTANT=true
ENABLE_STRATEGY_SIMULATOR=true
ENABLE_STATUTE_INTERPRETER=true
ENABLE_LITIGATION_COST_ESTIMATOR=true

# ==============================================================================
# Logging Configuration
# ==============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/glis.log
